<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Producto</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f2f2f2;
    }
    .form-container {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      padding: 40px;
    }
    .form-control:focus {
      border-color: #6B5B95;
      box-shadow: 0 0 0 0.2rem rgba(107, 91, 149, 0.25);
    }
    .btn-primary {
      background-color: #6B5B95;
      border-color: #6B5B95;
    }
    .btn-primary:hover {
      background-color: #4B4068;
      border-color: #4B4068;
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="form-container">
          <h2 class="text-center mb-4" style="color: #6B5B95;">Editar Producto</h2>
          <form method="POST" action="/producto/editar">
            <input type="text" name="id" id="id" value="<%= result.id %>" hidden>
            <div class="form-group">
              <label for="codigo">Código</label>
              <input type="text" class="form-control" id="codigo" name="codigo" placeholder="Ingresa el código" value="<%= result.codigo %>" required>
            </div>
            <div class="form-group">
              <label for="producto">Producto</label>
              <input type="text" class="form-control" id="producto" name="producto" placeholder="Ingresa el producto" value="<%= result.producto %>" required>
            </div>
            <div class="form-group">
              <label for="categoria">Categoría</label>
              <select class="form-control" id="categoria" name="categoria" required>
                <option value="<%= result.categoria_id %>"><%= result.categoria %></option>
                <% categorias.forEach(categoria => { %>
                  <option value="<%= categoria.id %>"><%= categoria.categoria %></option>
                <% }) %>
              </select>
            </div>
            <div class="form-group">
              <label for="existencia">Existencia</label>
              <input type="number" class="form-control" id="existencia" name="existencia" placeholder="Ingresa la existencia" value="<%= result.existencia_actual%>" required>
            </div>
            <div class="form-group">
              <label for="precio">Precio</label>
              <input type="number" class="form-control" id="precio" name="precio" placeholder="Ingresa el precio" value="<%= result.precio %>" required>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Guardar</button>
              <a href="/productos" class=" btn btn-info">Volver</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>